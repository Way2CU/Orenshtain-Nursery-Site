<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="site-sprite.svg"/>

			<header>
				<img
					src="_BASEURL.'/site/images/logo.png'"
					alt="logo"
					class="logo"
					cms:eval="src"
					/>
				<h1><cms:text constant="title_header"/></h1>
				<p><cms:text constant="subtitle_header"/></p>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone"/>
					<svg>
						<use
							href="#phone"
							xlink:href="site/images/site-sprite.svg#phone"
							/>
					</svg>
				</a>
				<figure>
					<svg>
						<use
							href="#mouse"
							xlink:href="site/images/site-sprite.svg#mouse"
							/>
					</svg>
				</figure>
			</header>

			<section id="about">
				<h2><cms:text constant="title_about"/></h2>
				<cms:module
					name="articles"
					action="show_list"
					group="about"
					template="parts/article_about.xml"
					/>
			</section>

			<section id="features">
				<h2><cms:text constant="title_features"/></h2>
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
						<param name="sprite" value="site/images/site-sprite.svg"/>
					</cms:module>
				</ul>
				<p><cms:text constant="subtitle_features"/></p>
			</section>

			<section id="gallery">
				<h2><cms:text constant="title_gallery"/></h2>
				<cms:module
					name="gallery"
					action="show_image_list"
					group="nursery_gallery"
					template="parts/image.xml"
					/>
			</section>

			<section id="contact">
				<h2><cms:text constant="title_contact"/></h2>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<svg>
						<use
							href="#phone"
							xlink:href="site/images/site-sprite.svg#phone"
							/>
					</svg>
					<cms:text constant="phone"/>
				</a>
				<a
					href="'fax:'.urlencode(Language::getText('fax'))"
					cms:eval="href"
					class="phone"
					>
					<svg>
						<use
							href="#fax"
							xlink:href="site/images/site-sprite.svg#fax"
							/>
					</svg>
					<cms:text constant="fax"/>
				</a>

				<div id="form_wrap">
					<p><cms:text constant="title_form"/></p>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</section>

			<footer>
				<div>
					<cms:template file="stock/copyright.xml">
						<param name="holder" value="copyright_holder"/>
						<param name="text" value="copyright_text"/>
						<param name="light" value=""/>
					</cms:template>
				</div>
			</footer>
		</body>
	</html>
</document>
